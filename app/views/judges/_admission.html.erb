			<th>Forma vlastníctva</th>
			<th>Zmena</th>
		</tr>
	</thead>
	<tbody>
	 <% admission.admission_items.select{|i| i.category == 'estate'}.each do |item|%>
	 <tr>
	 	<td><%=item.name%></td>
	 	<td><%=item.acquisition_date%></td>
	 		<td><%=item.value > 0 ? item.value : '-' %></td>
	 	<td><%=item.acquisition_reason%></td>
		<td><%=item.ownership_part%></td>
		<td><%=item.ownership_form%></td>
	 	<td><%=item.change%></td>
	 </tr>
 	<%end%>
	</tbody>
<table>

